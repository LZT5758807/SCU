<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MenuDrawer" />

    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#ffbbbbbb</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="MenuDrawer.Widget.Item">  
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="MenuDrawerStyle" parent="Widget.MenuDrawer">
        <item name="mdActiveIndicator">@drawable/menu_arrow</item>
        <item name="mdMenuSize">250dp</item>
    </style>
    
    
    <style name="TitleBarText" parent="AppBaseTheme">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    
    <style name="SubHeadText" parent="AppBaseTheme">
        <item name="android:textColor">@color/scu__defaultMianTitle</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="SubHeadTextGray" parent="AppBaseTheme">
        <item name="android:textColor">#ffb5b6b6</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MenuTitle" parent="AppBaseTheme">
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="MenuItem" parent="AppBaseTheme">
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="PageHeaderShadow" parent="AppBaseTheme">
        <item name="android:background">@drawable/bg_header_shadow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>
    
    <style name="BtnMainFuncText" parent="AppBaseTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff717070</item>
    </style>
    
    
    <style name="PersonalBannerText" parent="AppBaseTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="PersonalBannerDownNumText" parent="AppBaseTheme">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="PersonalBannerDownIntroText" parent="AppBaseTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffb2b2b2</item>
    </style>
    
    <style name="PersonalListText" parent="AppBaseTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff717070</item>
    </style>
    
    <style name="RollListKey" parent="AppBaseTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff999999</item>
    </style>
    <style name="RollListVal" parent="AppBaseTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff0088bb</item>
    </style>
      
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>      
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>
    
    <style name="LoginLabelText" parent="AppBaseTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="CourseListTextYellow" parent="AppBaseTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffff933e</item>
    </style>
    
    <style name="CourseListTextTitle" parent="AppBaseTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/scu__defaultMianTitle</item>
    </style>
    
    <style name="CourseListTextTitleXX" parent="AppBaseTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/scu__defaultCourseXXText</item>
    </style>
    
    <style name="CourseListTextGray" parent="AppBaseTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff999999</item>
    </style>
    
    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/editbox_login</item>
    </style>
    
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/check_login_bg</item>
    </style>
    

</resources>